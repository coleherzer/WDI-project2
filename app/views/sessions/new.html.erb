<div id="sign-in">
        <div class="container">
        <div class="form-group">
            <div class="row">

            <div class="col new-session"> 
            <h1>Sign In</h1>
            <%= form_tag sessions_path do |f| %>
                <br /> 
                <div class="form-group">
                <%= label_tag :email, 'Email' %>
                <br /> 
                <%= text_field_tag :email, params[:email] %>
                <br /> 
                </div>
                <div class="form-group">
                <%= label_tag :password, 'Password' %>
                <br /> 
                <%= password_field_tag :password %>
                <br /> 
                </div>
                <%= submit_tag 'Log in' %>
                <br /> 
                <%= link_to "Don't have an account?", new_user_path %>
            <% end %>
            </div> 

            <div class="col">

            </div>
    </div>

    </div>
</div>
